<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewCompass"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@+id/tvDirection"
        android:layout_centerHorizontal="true"
        android:src="@drawable/compass" />

    <TextView
        android:id="@+id/tvDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewCompass"
        android:layout_marginBottom="40dp"
        android:text="Direction: 0.0"
        android:layout_gravity="center_horizontal" />



    <TextView   android:id="@+id/tvSteg"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDirection"
        android:text="Steg tagna:"/>

    <TextView android:id="@+id/count"
        android:textSize="36dp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_width="wrap_content"
        android:layout_below="@id/tvSteg"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/count"
        android:hint="Värde"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:id="@+id/tvSealevel"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logga värde"
        android:layout_below="@id/tvSealevel"
        android:layout_marginTop="15dp"
        android:id="@+id/btnReference"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Relativhöjd: "
        android:id="@+id/tvRelativeHeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvRel"
        android:maxLines = "7"
        android:scrollbars = "vertical"
        android:layout_gravity="center_horizontal" />

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senaste trycket:"
        android:id="@+id/tvRecent"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvReference"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
